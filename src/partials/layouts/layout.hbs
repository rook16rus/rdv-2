<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="format-detection" content="telephone=no">

    <link rel="stylesheet" href="css/styles.css" />
    <title>
        {{ title }}
    </title>
</head>

<body class="no-touch {{isAdmin}}" ontouchstart="" data-assets-path="assets/">
    <div class="sprite" aria-hidden="true" style="position: absolute; width: 0; height: 0; overflow: hidden;">
        {{> sprite }}
    </div>

    <button class="top_button" type="button" tabindex="0" title="Наверх"></button>

    <div class="page-content">
        {{> header }}

        <main class="page-main">
            {{#block "main"}}

            {{/block}}
        </main>

        {{> footer }}
        {{> ie-placeholder }}

        {{> modals/form id="form1" title="Ваша заявка №1" noMessage=true}}
        {{> modals/form id="form2" title="Ваша заявка №2" noEmail=true noSite=true noMessage=true}}
        {{> modals/success id="success" title="Ваша заявка успешно отправлена!"}}
        {{> modals/error id="error" title="Ошибка..."}}
        {{> modals/menu }}

        <div class="js-phone-codes-data" data-url="assets/data/countries.json"></div>

        <script src="https://code.jquery.com/jquery-3.6.1.slim.min.js"
            integrity="sha256-w8CvhFs7iHNVUtnSP0YKEg00p9Ih13rlL9zGqvLdePA=" crossorigin="anonymous"></script>
        <script src="js/app.js"></script>
        <script src="assets/js/backend.js"></script>
    </div>
</body>

</html>